{
  "compilerOptions": {
    "lib": ["es2019"],
    "strict": true,
    "target": "es2019",
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitHelpers": true
  },
  "include": ["src"]
}
